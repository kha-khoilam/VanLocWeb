@{
    ViewData["Title"] = "Đăng nhập hệ thống - Hội đồng hương Vạn Lộc";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(135deg, #003366 0%, #001f3f 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            font-family: 'Outfit', sans-serif;
        }

        .login-card {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            color: white;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            padding: 12px 15px;
            border-radius: 10px;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: #D4AF37;
            box-shadow: none;
            color: white;
        }

        .btn-login {
            background: #D4AF37;
            border: none;
            color: #003366;
            font-weight: 700;
            padding: 12px;
            border-radius: 10px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-login:hover {
            background: #e5c04a;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(212, 175, 55, 0.4);
        }

        .brand-logo {
            font-size: 2.5rem;
            color: #D4AF37;
            margin-bottom: 30px;
            text-align: center;
        }

        .text-gold {
            color: #D4AF37 !important;
        }
    </style>
</head>

<body>
    <div class="login-card">
        <div class="brand-logo">
            <i class="bi bi-geo-fill"></i>
        </div>
        <h4 class="text-center fw-bold mb-4">HỘI ĐỒNG HƯƠNG <span class="text-gold">VẠN LỘC</span></h4>
        <p class="text-center small opacity-75 mb-4">Hệ thống quản trị Ban chấp hành</p>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="mb-3">
                <label class="form-label small opacity-75">Tên đăng nhập</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0 border-opacity-10 text-white-50"><i
                            class="bi bi-person"></i></span>
                    <input type="text" name="username" class="form-control border-start-0" placeholder="admin" required
                        autofocus>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label small opacity-75">Mật khẩu</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-end-0 border-opacity-10 text-white-50"><i
                            class="bi bi-lock"></i></span>
                    <input type="password" name="password" class="form-control border-start-0" placeholder="••••••••"
                        required>
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-0 text-danger small py-2 mb-4">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-login">ĐĂNG NHẬP</button>
            </div>
        </form>

        <div class="text-center mt-4">
            <a href="/" class="text-white-50 text-decoration-none small hover-white"><i
                    class="bi bi-arrow-left me-1"></i> Quay lại Trang chủ</a>
        </div>
    </div>
</body>

</html>
