@model VanLocWeb.Models.NewsItem
@{
    ViewData["Title"] = "Thêm bài viết mới";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-9 mx-auto">
        <div class="card border-0 shadow-sm rounded-4 p-4">
            <form asp-action="CreateNews" method="post" enctype="multipart/form-data">
                <div class="mb-4">
                    <label class="form-label fw-bold">Tiêu đề bài viết</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Nhập tiêu đề hấp dẫn..."
                        required>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Chuyên mục</label>
                        <select asp-for="Category" class="form-select">
                            <option value="Tin Hội">Tin Hội</option>
                            <option value="Thông báo">Thông báo</option>
                            <option value="Gương sáng">Gương sáng</option>
                            <option value="Khuyến học">Khuyến học</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Quyền hiển thị</label>
                        <select asp-for="Visibility" class="form-select">
                            <option value="Public">Công khai (Tất cả mọi người)</option>
                            <option value="Internal">Nội bộ (Chỉ hội viên)</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Ngày đăng</label>
                        <input asp-for="PublishDate" type="date" class="form-control"
                            value="@DateTime.Now.ToString("yyyy-MM-dd")">
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Tóm tắt ngắn</label>
                    <textarea asp-for="Summary" class="form-control" rows="2"
                        placeholder="Tóm tắt bài viết trong 2-3 câu..."></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Nội dung chi tiết</label>
                    <textarea asp-for="Content" class="form-control" rows="12"
                        placeholder="Viết nội dung bài viết tại đây..." required></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-bold">Ảnh minh họa (Có thể chọn nhiều)</label>
                    <div class="input-group">
                        <input type="file" name="imageFiles" class="form-control" accept="image/*" multiple>
                    </div>
                    <div class="form-text mt-2">Định dạng hỗ trợ: JPG, PNG, WEBP (Dung lượng < 5MB). Ảnh đầu tiên sẽ là
                            ảnh đại diện.</div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold small text-muted">Hoặc sử dụng đường dẫn ảnh có sẵn
                            (URL)</label>
                        <input asp-for="ImageUrl" class="form-control form-control-sm"
                            placeholder="https://example.com/image.jpg">
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="News" class="btn btn-light px-4 rounded-pill">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-5 rounded-pill fw-bold">XUẤT BẢN BÀI
                            VIẾT</button>
                    </div>
            </form>
        </div>
    </div>
</div>
