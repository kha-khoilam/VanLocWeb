@model List<VanLocWeb.Models.NewsItem>
@{
    ViewData["Title"] = "Quản lý Tin tức";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="fw-bold mb-0">Danh sách bài viết</h5>
    <a asp-action="CreateNews" class="btn btn-primary rounded-pill px-4"><i class="bi bi-plus-lg me-2"></i>Thêm bài viết
        mới</a>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tiêu đề bài viết</th>
                        <th>Chuyên mục</th>
                        <th>Ngày đăng</th>
                        <th>Hiển thị</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var n in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-primary">@n.Title</div>
                                <div class="small text-muted text-truncate" style="max-width: 300px;">@n.Summary</div>
                            </td>
                            <td>
                                <span class="badge bg-soft-primary text-primary">@n.Category</span>
                            </td>
                            <td class="small">@n.PublishDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (n.Visibility == VanLocWeb.Models.AccessLevel.Public)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Công khai</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Nội bộ</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-controller="Home" asp-action="NewsDetail" asp-route-id="@n.Id"
                                        class="btn btn-sm btn-light rounded-circle me-1" title="Xem" target="_blank"><i
                                            class="bi bi-box-arrow-up-right"></i></a>
                                    <a asp-action="EditNews" asp-route-id="@n.Id"
                                        class="btn btn-sm btn-light rounded-circle me-1" title="Sửa"><i
                                            class="bi bi-pencil"></i></a>
                                    <form asp-action="DeleteNews" method="post" class="d-inline"
                                        onsubmit="return confirm('Bạn có chắc chắn muốn xóa bài viết này?')">
                                        <input type="hidden" name="id" value="@n.Id" />
                                        <button type="submit" class="btn btn-sm btn-light rounded-circle text-danger"
                                            title="Xóa"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary {
        background-color: rgba(0, 51, 102, 0.1);
    }
</style>
