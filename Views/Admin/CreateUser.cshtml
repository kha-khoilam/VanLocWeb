@model VanLocWeb.Models.AdminUser
@{
    ViewData["Title"] = "Thêm Tài khoản Quản trị";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-white py-4 px-5 border-0">
                <h5 class="fw-bold mb-0">Thêm Tài khoản Quản trị mới</h5>
            </div>
            <div class="card-body p-5">
                <form asp-action="CreateUser" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Họ và Tên</label>
                        <input type="text" name="fullName" class="form-control form-control-lg bg-light border-0" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Tên đăng nhập</label>
                        <input type="text" name="username" class="form-control form-control-lg bg-light border-0" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Mật khẩu</label>
                        <input type="password" name="password" class="form-control form-control-lg bg-light border-0" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Phân quyền</label>
                        <select name="role" class="form-select form-select-lg bg-light border-0" asp-items="Html.GetEnumSelectList<VanLocWeb.Models.AdminRole>()"></select>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5">
                        <a asp-action="Users" class="btn btn-light px-4 rounded-pill">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary px-5 rounded-pill">Thêm mới</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
