@model List<VanLocWeb.Models.Member>
@{
    ViewData["Title"] = "Quản lý Hội viên";
    Layout = "_AdminLayout";
}

<div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-body p-4">
        <form method="get" class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control border-start-0" placeholder="Tìm theo tên..."
                        value="@ViewData["Search"]">
                </div>
            </div>
            <div class="col-md-3">
                <select name="village" class="form-select" onchange="this.form.submit()">
                    <option value="">Tất cả Thôn/Xóm</option>
                    <option value="Xóm 1" selected="@(ViewData["Village"]?.ToString() == "Xóm 1")">Xóm 1</option>
                    <option value="Xóm 2" selected="@(ViewData["Village"]?.ToString() == "Xóm 2")">Xóm 2</option>
                    <option value="Xóm 3" selected="@(ViewData["Village"]?.ToString() == "Xóm 3")">Xóm 3</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="">Trạng thái</option>
                    <option value="Active" selected="@(ViewData["Status"]?.ToString() == "Active")">Đang hoạt động</option>
                    <option value="Pending" selected="@(ViewData["Status"]?.ToString() == "Pending")">Chờ duyệt</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100 rounded-pill">Lọc</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Họ và tên</th>
                        <th>Thông tin liên hệ</th>
                        <th>Địa chỉ (Quê quán)</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-primary">@m.FullName</div>
                                <div class="small text-muted">@m.Occupation</div>
                            </td>
                            <td>
                                <div class="small"><i class="bi bi-telephone me-1"></i> @m.Phone</div>
                                <div class="small"><i class="bi bi-calendar3 me-1"></i> Gia nhập:
                                    @m.JoinDate.ToString("dd/MM/yyyy")</div>
                            </td>
                            <td class="small">
                                Tổ @m.Group, @m.Village, Vạn Lộc
                            </td>
                            <td>
                                @if (m.Status == "Active")
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Hoạt động</span>
                                }
                                else if (m.Status == "Pending")
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Chờ duyệt</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary rounded-pill px-3">Ngừng</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    @if (m.Status == "Pending")
                                    {
                                        <form asp-action="ApproveMember" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@m.Id" />
                                            <button type="submit"
                                                class="btn btn-sm btn-outline-success rounded-pill me-2">Duyệt</button>
                                        </form>
                                    }
                                    <button class="btn btn-sm btn-light rounded-circle me-1" title="Sửa"><i
                                            class="bi bi-pencil"></i></button>
                                    <form asp-action="DeleteMember" method="post" class="d-inline"
                                        onsubmit="return confirm('Bạn có chắc chắn muốn xóa hội viên này?')">
                                        <input type="hidden" name="id" value="@m.Id" />
                                        <button type="submit" class="btn btn-sm btn-light rounded-circle text-danger"
                                            title="Xóa"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
