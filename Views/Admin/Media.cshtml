@model List<VanLocWeb.Models.MediaItem>
@{
    ViewData["Title"] = "Quản lý Truyền thông";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="fw-bold mb-0">Bộ sưu tập Hình ảnh & Video</h5>
    <button class="btn btn-primary rounded-pill px-4"><i class="bi bi-upload me-2"></i>Tải lên Media</button>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
                <div class="position-relative">
                    <img src="@item.Url" class="card-img-top object-cover" style="height: 200px;" alt="@item.Title">
                    <span class="position-absolute top-0 end-0 m-3 badge bg-@(item.Visibility == VanLocWeb.Models.AccessLevel.Public ? "success" : "warning") rounded-pill">
                        @(item.Visibility == VanLocWeb.Models.AccessLevel.Public ? "Công khai" : "Nội bộ")
                    </span>
                    @if (item.Type == "Video")
                    {
                        <div class="position-absolute top-50 start-50 translate-middle">
                            <i class="bi bi-play-circle-fill text-white fs-1 opacity-75"></i>
                        </div>
                    }
                </div>
                <div class="card-body">
                    <h6 class="fw-bold mb-1 text-truncate">@item.Title</h6>
                    <div class="small text-muted mb-3">@item.Topic • @item.Year</div>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-sm btn-outline-secondary rounded-pill px-3">Sửa</button>
                        <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Xóa</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
