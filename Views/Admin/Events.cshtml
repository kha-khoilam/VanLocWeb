@model List<VanLocWeb.Models.EventItem>
@{
    ViewData["Title"] = "Quản lý Sự kiện";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="fw-bold mb-0">Danh sách các chương trình</h5>
    <a asp-action="CreateEvent" class="btn btn-primary rounded-pill px-4"><i class="bi bi-calendar-plus me-2"></i>Thêm
        sự kiện mới</a>
</div>

<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tên sự kiện / Địa điểm</th>
                        <th>Thời gian</th>
                        <th>Số lượng đăng ký</th>
                        <th>Hiển thị</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-primary">@e.Title</div>
                                <div class="small text-muted"><i class="bi bi-geo-alt me-1"></i> @e.Location</div>
                            </td>
                            <td>
                                <div class="small fw-bold">@e.StartDate.ToString("dd/MM/yyyy")</div>
                                <div class="extra-small text-muted">@e.StartDate.ToString("HH:mm") -
                                    @e.EndDate.ToString("HH:mm")</div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark rounded-pill">0 người</span> @* Placeholder for
                            registration count *@
                            </td>
                            <td>
                                @if (e.Visibility == VanLocWeb.Models.AccessLevel.Public)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Công khai</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3">Nội bộ</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-controller="Home" asp-action="EventDetail" asp-route-id="@e.Id"
                                        class="btn btn-sm btn-light rounded-circle me-1" title="Xem" target="_blank"><i
                                            class="bi bi-eye"></i></a>
                                    <a asp-action="EditEvent" asp-route-id="@e.Id"
                                        class="btn btn-sm btn-light rounded-circle me-1" title="Sửa"><i
                                            class="bi bi-pencil"></i></a>
                                    <a asp-action="ExportParticipants" asp-route-id="@e.Id"
                                        class="btn btn-sm btn-light rounded-circle me-1" title="Xuất danh sách đăng ký"><i
                                            class="bi bi-person-lines-fill"></i></a>
                                    <form asp-action="DeleteEvent" method="post" class="d-inline"
                                        onsubmit="return confirm('Bạn có chắc chắn muốn xóa sự kiện này?')">
                                        <input type="hidden" name="id" value="@e.Id" />
                                        <button type="submit" class="btn btn-sm btn-light rounded-circle text-danger"
                                            title="Xóa"><i class="bi bi-trash"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .extra-small {
        font-size: 0.7rem;
    }
</style>
