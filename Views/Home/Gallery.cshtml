@inject VanLocWeb.Services.DataService DataService
@{
    ViewData["Title"] = "Thư viện Hình ảnh - Video - Hội đồng hương Vạn Lộc";
    var year = ViewData["Year"] as string;
    var currentTopic = ViewData["Topic"] as string;
    var mediaList = DataService.GetAllMedia();

    if (!string.IsNullOrEmpty(year))
    {
        mediaList = mediaList.Where(m => m.Year == year).ToList();
    }
    if (!string.IsNullOrEmpty(currentTopic))
    {
        mediaList = mediaList.Where(m => m.Topic == currentTopic).ToList();
    }
}

<section class="bg-cream py-20 lg:py-32">
    <div class="container mx-auto px-4 text-center">
        <span class="text-sm font-bold text-accent uppercase tracking-widest mb-4 block">Khoảnh khắc & Kỷ niệm</span>
        <h1 class="font-display text-4xl md:text-6xl font-bold text-charcoal mb-8">Thư viện Truyền thông</h1>
        <p class="text-lg text-[#6b705c] max-w-2xl mx-auto">
            Nơi lưu giữ những hình ảnh đẹp nhất về con người, cảnh sắc và các hoạt động ý nghĩa của Hội đồng hương Vạn Lộc.
        </p>
    </div>
</section>

<div class="container mx-auto px-4 py-20">
    <!-- Filters -->
    <div class="flex flex-col md:flex-row justify-between items-center bg-white p-6 rounded-3xl border border-secondary/10 shadow-xl mb-16 gap-6">
        <div class="flex flex-wrap items-center gap-3">
            <a asp-action="Gallery" class="px-6 py-2.5 rounded-xl text-[10px] font-bold uppercase tracking-widest transition-all @(string.IsNullOrEmpty(year) ? "bg-charcoal text-white" : "bg-cream text-secondary hover:bg-secondary/10")">Tất cả</a>
            <a asp-action="Gallery" asp-route-year="2025" class="px-6 py-2.5 rounded-xl text-[10px] font-bold uppercase tracking-widest transition-all @(year == "2025" ? "bg-charcoal text-white" : "bg-cream text-secondary hover:bg-secondary/10")">2025</a>
            <a asp-action="Gallery" asp-route-year="2024" class="px-6 py-2.5 rounded-xl text-[10px] font-bold uppercase tracking-widest transition-all @(year == "2024" ? "bg-charcoal text-white" : "bg-cream text-secondary hover:bg-secondary/10")">2024</a>
        </div>

        <div class="flex items-center gap-10">
            <div class="flex items-center gap-8 text-[12px] font-bold uppercase tracking-widest text-secondary">
                <button class="hover:text-primary transition-colors border-b-2 border-primary pb-1">Ảnh</button>
                <button class="hover:text-primary transition-colors border-b-2 border-transparent pb-1">Video</button>
            </div>

            <div class="relative group">
                <button class="flex items-center gap-3 px-8 py-3 bg-primary/5 text-primary rounded-xl font-bold text-xs">
                    Chủ đề: @(string.IsNullOrEmpty(currentTopic) ? "Tất cả" : currentTopic) <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        @foreach (var item in mediaList)
        {
                <div class="group relative bg-white rounded-[2.5rem] overflow-hidden shadow-lg border border-secondary/5 aspect-[4/5] cursor-pointer" 
                     onclick="openLightbox('@item.Url', '@item.Title')">
                    <img src="@item.Url" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="@item.Title">
                    <div class="absolute inset-0 bg-gradient-to-t from-charcoal/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 p-10 flex flex-col justify-end">
                        <span class="text-[10px] font-bold text-cream/60 uppercase tracking-widest mb-2">@item.Year • @item.Topic</span>
                        <h6 class="text-white font-bold leading-tight">@item.Title</h6>
                    </div>
                    <div class="absolute top-6 right-6 w-10 h-10 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center text-white opacity-0 group-hover:opacity-100 transition-all duration-500 hover:bg-white hover:text-charcoal shadow-xl">
                        <i class="bi bi-@(item.Type == "Video" ? "play-fill" : "fullscreen")"></i>
                    </div>
                </div>
        }

        @if (!mediaList.Any())
        {
                <div class="col-span-full text-center py-20">
                    <p class="text-secondary font-bold">Không tìm thấy hình ảnh nào phù hợp.</p>
                </div>
        }
    </div>

    <!-- ... (pagination same) ... -->
</div>

<!-- Lightbox Modal -->
<div id="galleryLightbox" class="fixed inset-0 z-[9999] bg-charcoal/95 backdrop-blur-xl flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-300">
    <button onclick="closeLightbox()" class="absolute top-10 right-10 text-white text-3xl hover:text-accent transition-colors">
        <i class="bi bi-x-lg"></i>
    </button>
    <div class="max-w-5xl w-full p-6 text-center">
        <img id="lightboxImg" src="" class="max-h-[80vh] mx-auto rounded-3xl shadow-2xl mb-8 object-contain">
        <h4 id="lightboxTitle" class="text-white font-bold text-2xl"></h4>
    </div>
</div>

<script>
    function openLightbox(src, title) {
        document.getElementById('lightboxImg').src = src;
        document.getElementById('lightboxTitle').innerText = title;
        document.getElementById('galleryLightbox').classList.remove('opacity-0', 'pointer-events-none');
    }
    function closeLightbox() {
        document.getElementById('galleryLightbox').classList.add('opacity-0', 'pointer-events-none');
    }
</script>
