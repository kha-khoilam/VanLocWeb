@model List<VanLocWeb.Models.FinanceTransaction>
@{
    ViewData["Title"] = "Công khai Tài chính - Hội đồng hương Vạn Lộc";
    decimal totalIncome = Model.Where(t => t.Type == "Income").Sum(t => t.Amount);
    decimal totalExpense = Model.Where(t => t.Type == "Expense").Sum(t => t.Amount);
    decimal balance = totalIncome - totalExpense;
}

<section class="bg-cream py-20">
    <div class="container mx-auto px-4 text-center">
        <span class="text-sm font-bold text-accent uppercase tracking-widest mb-4 block">Minh bạch & Công khai</span>
        <h1 class="font-display text-4xl md:text-6xl font-bold text-charcoal mb-8">Báo cáo Tài chính</h1>
        <p class="text-lg text-[#6b705c] max-w-2xl mx-auto">
            Chúng tôi cam kết công khai mọi khoản thu chi nhằm đảm bảo sự minh bạch và tin cậy tuyệt đối đối với tất cả hội viên.
        </p>
    </div>
</section>

<div class="container mx-auto px-4 py-20">
    <!-- Summary Cards -->
    <div class="grid md:grid-cols-3 gap-8 mb-20 -mt-20 relative z-10">
        <div class="bg-white p-10 rounded-[2.5rem] border border-secondary/10 shadow-xl">
            <div class="flex justify-between items-center mb-6">
                <span class="text-xs font-bold text-secondary uppercase tracking-widest">Tổng Thu</span>
                <i class="bi bi-graph-up-arrow text-primary text-xl"></i>
            </div>
            <div class="text-3xl font-display font-bold text-charcoal mb-2">@totalIncome.ToString("N0") <span class="text-sm text-secondary">đ</span></div>
            <p class="text-xs text-secondary opacity-60">Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy")</p>
        </div>
        <div class="bg-white p-10 rounded-[2.5rem] border border-secondary/10 shadow-xl">
            <div class="flex justify-between items-center mb-6">
                <span class="text-xs font-bold text-secondary uppercase tracking-widest">Tổng Chi</span>
                <i class="bi bi-graph-down-arrow text-accent text-xl"></i>
            </div>
            <div class="text-3xl font-display font-bold text-charcoal mb-2">@totalExpense.ToString("N0") <span class="text-sm text-secondary">đ</span></div>
            <p class="text-xs text-secondary opacity-60">Cho hoạt động thiện nguyện & hội họp</p>
        </div>
        <div class="bg-charcoal p-10 rounded-[2.5rem] shadow-xl text-white">
            <div class="flex justify-between items-center mb-6">
                <span class="text-xs font-bold text-cream uppercase tracking-widest opacity-60">Số dư hiện tại</span>
                <i class="bi bi-piggy-bank text-accent text-xl"></i>
            </div>
            <div class="text-3xl font-display font-bold text-cream mb-2">@balance.ToString("N0") <span class="text-sm">đ</span></div>
            <p class="text-xs text-cream opacity-60">Sẵn sàng cho các hoạt động tiếp theo</p>
        </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-[3rem] border border-secondary/10 shadow-2xl overflow-hidden">
        <div class="p-10 md:p-14 flex flex-col md:flex-row justify-between items-center gap-8 border-b border-secondary/5">
            <h5 class="text-2xl font-bold text-charcoal">Lịch sử giao dịch gần đây</h5>
            <button class="flex items-center gap-2 px-8 py-4 bg-primary/5 text-primary rounded-2xl font-bold text-sm hover:bg-primary hover:text-white transition-all">
                <i class="bi bi-download"></i> Tải báo cáo (PDF)
            </button>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead>
                    <tr class="bg-cream/50 text-secondary text-[10px] font-bold uppercase tracking-[0.2em]">
                        <th class="px-12 py-6">Ngày</th>
                        <th class="px-12 py-6">Nội dung / Diễn giải</th>
                        <th class="px-12 py-6">Loại</th>
                        <th class="px-12 py-6 text-right">Số tiền</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-secondary/5">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-cream/20 transition-colors">
                            <td class="px-12 py-8 text-sm text-secondary">@item.Date.ToString("dd/MM/yyyy")</td>
                            <td class="px-12 py-8">
                                <div class="font-bold text-charcoal mb-1">@item.Description</div>
                                @if(item.Visibility == VanLocWeb.Models.AccessLevel.Internal) {
                                    <span class="px-3 py-1 bg-accent/10 text-accent text-[9px] font-bold rounded-full uppercase tracking-tighter">Nội bộ</span>
                                }
                            </td>
                            <td class="px-12 py-8">
                                <span class="px-4 py-1.5 rounded-full text-[10px] font-bold uppercase tracking-widest @(item.Type == "Income" ? "bg-primary/10 text-primary" : "bg-accent/10 text-accent")">
                                    @(item.Type == "Income" ? "THU" : "CHI")
                                </span>
                            </td>
                            <td class="px-12 py-8 text-right font-display font-bold @(item.Type == "Income" ? "text-primary" : "text-accent")">
                                @(item.Type == "Income" ? "+" : "-")@item.Amount.ToString("N0") <span class="text-[10px] font-body opacity-60">đ</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
