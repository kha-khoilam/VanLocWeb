@{
    ViewData["Title"] = "Đăng ký Hội viên - Hội đồng hương Vạn Lộc";
}

<section class="bg-cream py-20 lg:py-32">
    <div class="container mx-auto px-4 text-center">
        <span class="text-sm font-bold text-accent uppercase tracking-widest mb-4 block">Kết nối & Đồng hành</span>
        <h1 class="font-display text-4xl md:text-6xl font-bold text-charcoal mb-8">Gia nhập Hội</h1>
        <p class="text-lg text-[#6b705c] max-w-2xl mx-auto">
            Hãy trở thành một phần của đại gia đình Vạn Lộc để cùng gắn kết, sẻ chia và xây dựng quê hương ngày càng
            giàu mạnh.
        </p>
    </div>
</section>

<div class="container mx-auto px-4 py-20 -mt-20 relative z-10">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-[3rem] shadow-2xl border border-secondary/10 overflow-hidden">
            <div class="p-10 md:p-20">
                @if (TempData["Message"] != null)
                {
                    <div
                        class="alert alert-success rounded-2xl mb-10 p-6 border-0 shadow-sm flex items-center gap-4 bg-green-50 text-green-800">
                        <i class="bi bi-check-circle-fill text-2xl"></i>
                        <div>@TempData["Message"]</div>
                    </div>
                }
                <form asp-action="Join" method="post" class="space-y-16">
                    <!-- Section: Personal -->
                    <div class="space-y-10">
                        <div class="flex items-center gap-4 border-b border-secondary/5 pb-6">
                            <div
                                class="w-12 h-12 bg-primary/5 rounded-2xl flex items-center justify-center text-primary text-xl">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <h5 class="text-xl font-bold text-charcoal uppercase tracking-widest">Thông tin cá nhân</h5>
                        </div>
                        <div class="grid md:grid-cols-2 gap-8">
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Họ và
                                    tên *</label>
                                <input type="text" name="FullName"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary placeholder-secondary/30"
                                    placeholder="Nguyễn Văn A" required>
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Ngày
                                    sinh</label>
                                <input type="date"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary">
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Số
                                    điện thoại *</label>
                                <input type="tel" name="Phone"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary"
                                    placeholder="09xx..." required>
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Nghề
                                    nghiệp/Chức vụ</label>
                                <input type="text" name="Occupation"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary"
                                    placeholder="Ví dụ: Kỹ sư, Giáo viên...">
                            </div>
                        </div>
                    </div>

                    <!-- Section: Origin -->
                    <div class="space-y-10">
                        <div class="flex items-center gap-4 border-b border-secondary/5 pb-6">
                            <div
                                class="w-12 h-12 bg-accent/5 rounded-2xl flex items-center justify-center text-accent text-xl">
                                <i class="bi bi-house-door"></i>
                            </div>
                            <h5 class="text-xl font-bold text-charcoal uppercase tracking-widest">Quê quán & Cư trú</h5>
                        </div>
                        <div class="grid md:grid-cols-3 gap-8">
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Số
                                    nhà (nếu có)</label>
                                <input type="text"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal placeholder-secondary/30"
                                    placeholder="...">
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Tổ
                                    *</label>
                                <input type="text" name="Group"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal placeholder-secondary/30"
                                    placeholder="Tổ 1" list="toSuggestions" required>
                                <datalist id="toSuggestions">
                                    <option value="Tổ 1"></option>
                                    <option value="Tổ 2"></option>
                                    <option value="Tổ 3"></option>
                                </datalist>
                            </div>
                            <div class="space-y-2">
                                <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Xóm
                                    *</label>
                                <input type="text" name="Village"
                                    class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal placeholder-secondary/30"
                                    placeholder="Xóm 1" list="xomSuggestions" required>
                                <datalist id="xomSuggestions">
                                    <option value="Xóm 1"></option>
                                    <option value="Xóm 2"></option>
                                    <option value="Xóm 3"></option>
                                </datalist>
                            </div>
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Địa chỉ
                                thường trú hiện tại *</label>
                            <input type="text"
                                class="w-full bg-cream/30 border-0 rounded-2xl px-6 py-4 text-charcoal placeholder-secondary/30"
                                placeholder="Số nhà, Tên đường, Thành phố..." required>
                        </div>
                    </div>

                    <!-- Section: Message -->
                    <div class="space-y-10">
                        <div class="flex items-center gap-4 border-b border-secondary/5 pb-6">
                            <div
                                class="w-12 h-12 bg-primary/5 rounded-2xl flex items-center justify-center text-primary text-xl">
                                <i class="bi bi-chat-text"></i>
                            </div>
                            <h5 class="text-xl font-bold text-charcoal uppercase tracking-widest">Thông tin thêm</h5>
                        </div>
                        <div class="space-y-2">
                            <label class="text-[10px] font-bold text-secondary uppercase tracking-widest px-1">Mong muốn
                                khi gia nhập Hội</label>
                            <textarea
                                class="w-full bg-cream/30 border-0 rounded-3xl px-6 py-6 text-charcoal focus:ring-2 focus:ring-primary placeholder-secondary/30 h-32"
                                placeholder="Chia sẻ tâm nguyện của bạn..."></textarea>
                        </div>
                    </div>

                    <div class="pt-10 flex flex-col md:flex-row items-center justify-between gap-10">
                        <div class="flex items-center gap-4">
                            <input type="checkbox" id="policy"
                                class="w-6 h-6 rounded-lg bg-cream border-0 text-primary focus:ring-primary" required>
                            <label for="policy" class="text-xs text-secondary leading-relaxed">
                                Tôi cam kết thông tin trên là chính xác và tự nguyện tham gia Hội.
                            </label>
                        </div>
                        <button type="submit"
                            class="w-full md:w-auto px-12 py-5 bg-charcoal text-white rounded-2xl font-bold hover:bg-primary transition-all shadow-xl">
                            GỬI ĐĂNG KÝ NGAY
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <p class="text-center mt-12 text-secondary font-bold text-sm uppercase tracking-[0.2em]">
            Hotline hỗ trợ: <span class="text-accent">0123 456 789</span>
        </p>
    </div>
</div>
