@model List<VanLocWeb.Models.Member>
@{
    ViewData["Title"] = "Danh bạ Hội viên - Hội đồng hương Vạn Lộc";
    var search = ViewData["Search"] as string;
    var village = ViewData["Village"] as string;
    var job = ViewData["Job"] as string;
}

<section class="bg-cream py-20 lg:py-32">
    <div class="container mx-auto px-4 text-center">
        <span class="text-sm font-bold text-accent uppercase tracking-widest mb-4 block">Gắn kết tình quê</span>
        <h1 class="font-display text-4xl md:text-6xl font-bold text-charcoal mb-8">Mạng lưới Hội viên</h1>
        <p class="text-lg text-[#6b705c] max-w-2xl mx-auto mb-10">
            Nơi tìm kiếm và gắn kết những người con Vạn Lộc trên khắp mọi miền đất nước.
        </p>
        <div class="inline-flex items-center gap-4 px-6 py-3 bg-white rounded-2xl shadow-sm border border-secondary/10">
            <i class="bi bi-people-fill text-primary text-xl"></i>
            <span class="text-charcoal font-bold">@Model.Count</span>
            <span class="text-secondary text-sm">Hội viên đang hoạt động</span>
        </div>
    </div>
</section>

<div class="container mx-auto px-4 py-20">
    <!-- Filter Bar -->
    <div class="bg-white p-10 md:p-14 rounded-[3rem] border border-secondary/10 shadow-2xl mb-20 -mt-20 relative z-10">
        <form asp-action="Members" method="get" class="grid lg:grid-cols-4 gap-8">
            <div class="space-y-2">
                <label class="text-xs font-bold text-secondary uppercase tracking-widest px-1">Tìm theo họ tên</label>
                <div class="relative">
                    <input type="text" name="search" class="w-full bg-cream/50 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary placeholder-secondary" placeholder="Tên..." value="@search">
                    <i class="bi bi-search absolute right-6 top-1/2 -translate-y-1/2 text-secondary"></i>
                </div>
            </div>
            <div class="space-y-2">
                <label class="text-xs font-bold text-secondary uppercase tracking-widest px-1">Khu vực Xóm</label>
                <select name="village" class="w-full bg-cream/50 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary appearance-none">
                    <option value="">Tất cả Xóm</option>
                    @for (int i = 1; i <= 6; i++) {
                        var xom = $"Xóm {i}";
                        <option value="@xom" selected="@(village == xom)">@xom</option>
                    }
                </select>
            </div>
            <div class="space-y-2">
                <label class="text-xs font-bold text-secondary uppercase tracking-widest px-1">Nghề nghiệp</label>
                <input type="text" name="job" class="w-full bg-cream/50 border-0 rounded-2xl px-6 py-4 text-charcoal focus:ring-2 focus:ring-primary placeholder-secondary" placeholder="Nghề nghiệp..." value="@job">
            </div>
            <div class="flex items-end">
                <button type="submit" class="w-full bg-primary hover:bg-accent text-white font-bold py-4 rounded-2xl transition-all shadow-xl">
                    LỌC DỮ LIỆU
                </button>
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(village) || !string.IsNullOrEmpty(job))
    {
        <div class="mb-12 flex flex-wrap items-center gap-4 px-6 py-4 bg-white/50 rounded-2xl border border-secondary/5">
            <span class="text-sm font-bold text-secondary">Đang lọc theo:</span>
            @if (!string.IsNullOrEmpty(search)) { <span class="bg-primary/10 text-primary text-xs font-bold px-4 py-2 rounded-full">Tên: @search</span> }
            @if (!string.IsNullOrEmpty(village)) { <span class="bg-primary/10 text-primary text-xs font-bold px-4 py-2 rounded-full">@village</span> }
            @if (!string.IsNullOrEmpty(job)) { <span class="bg-primary/10 text-primary text-xs font-bold px-4 py-2 rounded-full">Nghề: @job</span> }
            <a asp-action="Members" class="text-accent text-xs font-bold hover:underline ml-4">Xóa lọc</a>
        </div>
    }

    <!-- Members Grid -->
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        @foreach (var member in Model)
        {
            <div class="group bg-white rounded-[2.5rem] p-10 border border-secondary/10 hover:shadow-2xl transition-all text-center">
                <div class="mb-8 relative inline-block">
                    <div class="absolute inset-0 bg-primary/20 blur-2xl rounded-full scale-0 group-hover:scale-100 transition-transform"></div>
                    <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(member.FullName)&background=6b705c&color=f7ecd9&size=128&bold=true"
                         class="rounded-full shadow-lg border-4 border-white relative z-10 w-28 h-28 object-cover" alt="Avatar">
                </div>
                <h5 class="text-lg font-bold text-charcoal mb-2">@member.FullName</h5>
                <span class="inline-block px-4 py-1 bg-cream text-[10px] font-bold text-accent uppercase tracking-widest rounded-full mb-6">@member.Village</span>
                <p class="text-xs text-secondary mb-8 flex items-center justify-center gap-2">
                    <i class="bi bi-briefcase"></i> @member.Occupation
                </p>
                <div class="flex justify-center gap-3">
                    <a asp-action="Contact" asp-route-subject="Kết nối với hội viên: @member.FullName" 
                       class="w-10 h-10 rounded-xl bg-primary/5 text-primary hover:bg-primary hover:text-white transition-colors flex items-center justify-center border border-primary/10 no-underline">
                        <i class="bi bi-chat-dots-fill text-sm"></i>
                    </a>
                    <button class="w-10 h-10 rounded-xl bg-charcoal/5 text-charcoal opacity-30 cursor-not-allowed flex items-center justify-center border border-charcoal/10">
                        <i class="bi bi-telephone text-sm"></i>
                    </button>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-32">
            <div class="w-20 h-20 bg-cream rounded-full flex items-center justify-center text-secondary text-4xl mx-auto mb-8">
                <i class="bi bi-people"></i>
            </div>
            <h4 class="text-xl font-bold text-charcoal mb-4">Không tìm thấy hội viên</h4>
            <p class="text-secondary mb-10">Thử tìm kiếm với thông tin khác.</p>
            <a asp-action="Members" class="text-primary font-bold hover:underline">Quay lại danh sách chính</a>
        </div>
    }

    <!-- CTA -->
    <div class="mt-32 relative overflow-hidden bg-[#232d4b] rounded-[3rem] p-12 lg:p-20 text-center">
        <div class="absolute top-0 right-0 w-64 h-64 bg-accent/20 blur-[100px] rounded-full"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-primary/20 blur-[100px] rounded-full"></div>
        <div class="relative z-10">
            <h2 class="font-display text-4xl font-bold text-white mb-6">Trở thành một phần của cộng đồng</h2>
            <p class="text-cream opacity-60 max-w-2xl mx-auto mb-12 text-lg">
                Hãy cùng chúng tôi xây dựng mạng lưới gắn kết những người con Vạn Lộc xa quê để cùng phát triển và giúp đỡ lẫn nhau.
            </p>
            <a asp-action="Join" class="bg-accent hover:bg-white hover:text-charcoal text-white font-bold px-12 py-5 rounded-2xl transition-all shadow-2xl inline-block no-underline">
                ĐĂNG KÝ THAM GIA NGAY
            </a>
        </div>
    </div>
</div>

<style>
    .bg-soft-primary { background-color: rgba(0,51,102,0.1); }
    .max-width-700 { max-width: 700px; }
    .z-index-1 { position: relative; z-index: 1; }
</style>
